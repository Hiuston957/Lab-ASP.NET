@model List<Contact>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>Lista kontaktów</h1>
<a class="btn btn-primary" asp-controller="Contact" asp-action="Create">Dodaj kontakt</a>
<table class="table">
    <thead>
        <tr>
            <th>
                Imię
            </th>
            <th>
                Adres email
            </th>
            <th>
                Akcje
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(Contact item in @Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Email
                </td>
                <td>
                    <a asp-action="Update" asp-route-id="@item.Id">Edytuj</a>
                    <a asp-action="Details" asp-route-id="@item.Id">Szczegóły</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Usuń</a>


                </td>
            </tr>
        }
    </tbody>
</table>