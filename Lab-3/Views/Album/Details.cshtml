@{
}
<h1>Szczegóły</h1>
<form asp-controller="Album" asp-action="Index" method="post" >


    <label asp-for="Nazwa"></label>
    <input class="form-control" asp-for="Nazwa" readonly />
    <span class="text-danger" asp-validation-for="Nazwa"></span>

    <label asp-for="Zespol"></label>
    <input class="form-control" asp-for="Zespol" readonly />
    <span class="text-danger" asp-validation-for="Zespol"></span>

    <label asp-for="Spis_piosenek">Spis:</label>
    <ul>
        @for (int i = 0; i < Model.Spis_piosenek.Count; i++)
        {
            <li>
                <span>@Model.Spis_piosenek[i] - @Model.Czas_trwania[i].ToString(@"mm\m\ ss\s")</span>
            </li>
        }
    </ul>
    <span class="text-danger" asp-validation-for="Spis_piosenek"></span>

    <label asp-for="Notowanie"></label>
    <input class="form-control" asp-for="Notowanie" readonly />
    <span class="text-danger" asp-validation-for="Notowanie"></span>

    <label asp-for="Data_wydania"></label>
    <input class="form-control" readonly placeholder="@Model.Data_wydania.ToString("dd MMMM yyyy")" />
    <span class="text-danger" asp-validation-for="Data_wydania"></span>


    <button type="submit">Wróć</button>

</form>
